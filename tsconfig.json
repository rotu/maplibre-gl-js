{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "isolatedModules": false,
    "noEmit": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": false,
    "target": "ES2019",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["node", "jest", "geojson", "offscreencanvas"],
    "paths": {
      "#src/*": ["./src/*"]
    }
  },

  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "esm": true
  },
  "include": ["rollup.config.*", "src/**/*", "test/bench/**/*", "build/**/*"],
  "exclude": ["node_modules", "dist", "test/bench/**/*generated*"]
}